<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Balloon Tap Game</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { display: flex; justify-content: center; align-items: center; height: 100vh; background: linear-gradient(to bottom, skyblue, lightblue); overflow: hidden; font-family: Arial, sans-serif; }
        #gameContainer { position: relative; width: 100vw; height: 100vh; }
        .balloon {
            position: absolute;
            width: 60px;
            height: 80px;
            background: radial-gradient(circle at 30% 30%, white, red);
            border-radius: 50% 50% 45% 45%;
            display: flex;
            justify-content: center;
            align-items: center;
            box-shadow: inset -5px -5px 10px rgba(0,0,0,0.2);
            transition: transform 0.2s;
        }
        .balloon:hover {
            transform: scale(1.1);
        }
        .string {
            position: absolute;
            width: 2px;
            height: 40px;
            background: black;
            bottom: -40px;
            left: 50%;
            transform: translateX(-50%);
        }
        #score {
            position: absolute;
            top: 10px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 24px;
            font-weight: bold;
            background: rgba(255, 255, 255, 0.8);
            padding: 5px 15px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.3);
        }
        #timer {
            position: absolute;
            top: 10px;
            right: 20px;
            font-size: 24px;
            font-weight: bold;
            background: rgba(255, 255, 255, 0.8);
            padding: 5px 15px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.3);
        }
        #popup {
            display: none;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 20px;
            font-size: 24px;
            font-weight: bold;
            color: red;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.5);
            text-align: center;
        }
    </style>
</head>
<body>
    <div id="gameContainer">
        <div id="score">Score: 0</div>
        <div id="timer">Time: 30</div>
        <div id="popup">Game Over! Restarting...</div>
    </div>

    <script>
        const gameContainer = document.getElementById("gameContainer");
        const scoreDisplay = document.getElementById("score");
        const timerDisplay = document.getElementById("timer");
        const popup = document.getElementById("popup");
        
        let score = 0;
        let maxScore = 10;
        let colors = ["red", "blue", "green", "yellow", "purple", "orange"];
        let timeLeft = 30;
        let gameInterval, timerInterval;
        
        function startGame() {
            score = 0;
            timeLeft = 30;
            scoreDisplay.textContent = `Score: ${score}`;
            timerDisplay.textContent = `Time: ${timeLeft}`;
            popup.style.display = "none";

            gameInterval = setInterval(createBalloon, 1000);
            timerInterval = setInterval(updateTimer, 1000);
        }
        
        function updateTimer() {
            if (timeLeft > 0) {
                timeLeft--;
                timerDisplay.textContent = `Time: ${timeLeft}`;
            } else {
                endGame("Game Over! Restarting...");
            }
        }

        function endGame(message) {
            clearInterval(gameInterval);
            clearInterval(timerInterval);
            
            document.querySelectorAll(".balloon").forEach(balloon => balloon.remove());

            popup.textContent = message;
            popup.style.display = "block";
            setTimeout(startGame, 3000);
        }
        
        function createBalloon() {
            const balloon = document.createElement("div");
            balloon.classList.add("balloon");
            
            const color = colors[Math.floor(Math.random() * colors.length)];
            balloon.style.background = `radial-gradient(circle at 30% 30%, white, ${color})`;
            
            let x = Math.random() * (window.innerWidth - 60);
            balloon.style.left = `${x}px`;
            balloon.style.bottom = `0px`;
            
            const string = document.createElement("div");
            string.classList.add("string");
            balloon.appendChild(string);
            
            gameContainer.appendChild(balloon);
            
            let rise = setInterval(() => {
                balloon.style.bottom = (parseInt(balloon.style.bottom) + 5) + "px";
                if (parseInt(balloon.style.bottom) > window.innerHeight) {
                    clearInterval(rise);
                    gameContainer.removeChild(balloon);
                }
            }, 30);
            
            balloon.addEventListener("click", () => popBalloon(balloon, rise));
            balloon.addEventListener("touchstart", () => popBalloon(balloon, rise), { passive: true });
        }
        
        function popBalloon(balloon, rise) {
            clearInterval(rise);
            score++;
            scoreDisplay.textContent = `Score: ${score}`;
            balloon.remove();
            
            if (score >= maxScore) {
                endGame("ðŸŽ‰ Winner! Game Restarting... ðŸŽ‰");
            }
        }

        startGame();
    </script>
</body>
</html>
